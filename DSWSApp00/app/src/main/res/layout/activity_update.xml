<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFDCFEFC"
    tools:context=".Update">
    android:layout_alignParentTop="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_update">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="110dp"
        android:paddingRight="60dp"
        android:paddingLeft="60dp"
        app:layout_constraintTop_toBottomOf="@id/layout1"
        tools:layout_editor_absoluteX="8dp">

        <TextView
            android:id="@+id/tablename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="13dp"
            android:textColor="#2c75ff"
            android:text="codename"
            />
        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textColor="#555f61"
            android:textSize="15dp"
            android:text="address"
            />

        <Button
            android:id="@+id/data"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="90dp"
            android:gravity="center"
            android:background="#FF91D1FB"
            android:onClick="gisData"
            android:text="REGISTER FROM MAP" />

        <Button
            android:id="@+id/scan"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center"
            android:layout_marginTop="250dp"
            android:background="#FFA5FAE5"
            android:onClick="scanCode"
            android:text="DISTRIBUTE ASSISTANCE" />

        <Button
            android:id="@+id/reg"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="55dp"
            android:layout_marginTop="170dp"
            android:background="#FFFAC38C"
            android:onClick="register"
            android:text="REGISTER MANUALLY" />


    </FrameLayout>



</android.support.constraint.ConstraintLayout>