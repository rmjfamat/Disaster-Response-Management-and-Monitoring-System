<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFDCFEFC"
    tools:context=".Home">

    <FrameLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="60dp"
        android:paddingTop="40dp"
        android:paddingRight="60dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            app:srcCompat="@drawable/dsws" />

        <TextView
            android:id="@+id/astxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="110dp"
            android:text="Assistant"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/dsws"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="75dp"
            android:text="DSWS"
            android:textColor="#1251a0"
            android:textSize="35dp"
            android:textStyle="bold" />/>



    </FrameLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="8dp"
        android:paddingLeft="60dp"
        android:paddingTop="60dp"
        android:paddingRight="60dp"
        app:layout_constraintTop_toBottomOf="@id/layout1"
        tools:layout_editor_absoluteX="139dp">


        <Button
            android:id="@+id/update"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#DB8AFAF1"
            android:text="UPDATE EXISTING DATA" />

        <TextView
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="190dp"
            android:clickable="true"
            android:gravity="center"
            android:padding="20dp"
            android:text="Logout?"
            android:textColor="#FF3A8FD4"
            android:textSize="18sp" />

        <Button
            android:id="@+id/create"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="80dp"
            android:background="#DDF4F0B6"
            android:gravity="center"
            android:text="NEW FIRE INCIDENT DATA" />

    </FrameLayout>

</android.support.constraint.ConstraintLayout>